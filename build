#!/bin/sh

dialog_feed () {
			LASTNUM=0
			while read LINE; do
				echo "XXX";
				N=`echo $LINE | sed -E 's/(\[([ 0-9]+)%\])?.*/\2/'`
				TXT=`echo $LINE | sed -E 's/(\[[ 0-9]+%\])?(.*)/\2/'`
				if [ "$N" = "" ] ; then
					echo $LASTNUM
				else 
					echo $N
					LASTNUM=$N
				fi
				echo $TXT
				echo "XXX";
			done
			echo "XXX"
			echo 100
			echo "All done!"
			echo "XXX"
}

zenity_feed () {
			while read LINE; do
				N=`echo $LINE | sed -E 's/(\[([ 0-9]+)%\])?.*/\2/'`
				TXT=`echo $LINE | sed -E 's/(\[[ 0-9]+%\])?(.*)/\2/'`
				N=$(($N-1))
				echo $N
				echo "# $TXT"
			done
}



if [ "$1" != "nodialog" ] ; then	
	WHIPTAIL=`which whiptail`
	ZENITY=`which zenity`
	if [ "$ZENITY" != "" ] ; then
		echo 100 | $ZENITY --progress --auto-close
		if [ "$?" = "0" ] ; then
			$0 nodialog $* 2>errors.log | zenity_feed | $ZENITY --width=700 --progress --auto-kill --auto-close --title="Building, please wait..."
			$ZENITY --text-info --filename=errors.log --title="Build result" --width=650 --height=350 --ok-label="Close" --cancel-label="Close" 
			exit $?
		fi
	fi
	if [ "$WHIPTAIL" != "" ] ; then
		COLS=`tput cols`
		COLS=$(($COLS*3/4))			
		$0 nodialog $* 2>errors.log | dialog_feed | $WHIPTAIL --gauge Building 12 $COLS 0
		cat errors.log 
		exit $? 	
	fi 
	$0 nodialog $*
	exit $? 
else
	shift 
fi

BUILDTYPE=RELWITHDEBINFO
if [ "$1" = "debug" ] ; then 
    BUILDTYPE=DEBUG
fi
if [ "$1" = "nodebug" ] ; then
    BUILDTYPE=RELEASE
fi

NPROC=`which nproc`
if [ "$NPROC" = "" ] ; then
	PROCS=2
else
	PROCS=`$NPROC`
fi
	

	
mkdir -p ./data
mkdir -p ./secure_data
mkdir -p ./log
mkdir -p ./run
cmake -DCMAKE_BUILD_TYPE=$BUILDTYPE .
echo "Building in $PROCS thread(s)"
make all -j$PROCS
echo Done >&2